<%= form_tag search_action_path, :method => :get, :class => 'search-query-form form-inline clearfix' do %>
<%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>

<div class="input-group search-input-group">
  <label for="q" class="sr-only"><%= t('blacklight.search.form.q_label') %></label>
  <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :class => "search_q q form-control", :id => "q" %>

  <span class="input-group-btn">
    <button type="submit" class="btn btn-primary search-btn" id="search">
      <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
    </button>
  </span>
</div>
<% end %>
